<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <div class="rounded-lg lg:w-1/3 w-full flex lg:flex-1 justify-between justify-center items-center px-2 py-2 h-24 overflow-hidden">
    <% if current_user == @post.user %>
    <%= link_to "Edit this file", edit_post_path(@post), class: "rounded-lg py-3 px-5 bg-gray-200 inline-block font-medium my=0" %>      
    <div class="inline-block ml-2">
    <%= button_to "Destroy this file", @post, method: :delete, class: "rounded-lg py-3 px-5 bg-gray-200 font-medium" %>
    </div>
    <% end %>
    <%= link_to "Back to files", posts_path, class: " ml-2 rounded-lg py-3 px-5 bg-gray-200 inline-block font-medium my-5" %>
    </div>
    <%= render @post %>
  </div>
</div>
